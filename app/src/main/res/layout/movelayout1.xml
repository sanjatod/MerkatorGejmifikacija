<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/imgDay"
        android:layout_width="110dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/dan_drugi" />

    <TextView
        android:id="@+id/txtTextPitanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/imgDay"
        android:layout_alignParentTop= "true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextPitanja" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgDay"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:text="1.Odeljenje osiguranja" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt1"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:text="2.Sektor za upravljanje imovinom" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:text="3.Odeljenje pošte" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt3"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:text="4.Služba za energetsku efikasnost i nerobne nabavke" />
    <EditText
        android:id="@+id/etxt1"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imgDay"
        android:inputType="number"
        android:layout_toRightOf="@+id/txt1"
        android:text="" />


    <EditText
        android:id="@+id/etxt2"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/txt2"
        android:inputType="number"
        android:layout_below="@+id/txtOsiguranje"
        android:text="" />

    <EditText
        android:id="@+id/etxt3"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/txt3"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:layout_below="@+id/txtKancelarijskiMaterijal"
        android:text="" />

    <EditText
        android:id="@+id/etxt4"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/txt3"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:layout_below="@+id/txtGas"
        android:text="" />

    <EditText
        android:id="@+id/etxt5"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/txt4"
        android:layout_below="@+id/txtLokali"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:text="" />
    <TextView
        android:id="@+id/txtOsiguranje"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imgDay"
        android:layout_toRightOf="@+id/etxt1"
        android:text="Osiguranje" />


    <TextView
        android:id="@+id/txtKancelarijskiMaterijal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/etxt2"
        android:layout_below="@+id/txtOsiguranje"
        android:text="Kancelarijski materijal" />

    <TextView
        android:id="@+id/txtGas"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/etxt3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtKancelarijskiMaterijal"
        android:text="Gas" />

    <TextView
        android:id="@+id/txtLokali"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/etxt4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtGas"
        android:text="Lokali" />

    <TextView
        android:id="@+id/txtPosiljka"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:gravity="left|center"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/etxt4"
        android:layout_below="@+id/txtLokali"
        android:layout_marginTop="10dp"
        android:text="Pošiljka" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/next" />


    />

</RelativeLayout>

