<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txtTextPitanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kliknite na dugme koje treperi da bi ste nastavli gejmifikaciju"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTradingManagment"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:text="Trading i category &#10;management"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:textAppearance="?textAppearanceHeadline1"
        android:textSize="15sp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"
        app:backgroundTint="@color/red" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMaloprodaja"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:text="Maloprodaja"
        android:textSize="15sp"
        android:gravity="left|center_vertical"
        android:textAppearance="?textAppearanceHeadline1"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/btnTradingManagment"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"
        app:backgroundTint="@color/red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSluzbaMarketing"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left|center_vertical"
        android:textSize="15sp"
        android:text="Marketing"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/btnMaloprodaja"
        android:textAppearance="?textAppearanceHeadline1"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"
        app:backgroundTint="@color/red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSluzbaInvesticijeRazvoj"
        android:text="Područje investicija, razvoja i kontrole poslovnih procesa"
        android:layout_toRightOf="@+id/btnSluzbaMarketing"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left|center_vertical"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:textAppearance="?textAppearanceHeadline1"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"
        app:backgroundTint="@color/red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPodrucjeFinansija"
        android:layout_toRightOf="@+id/btnSluzbaInvesticijeRazvoj"
        android:text="Područje finansija"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left|center_vertical"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:textAppearance="?textAppearanceHeadline1"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"
        app:backgroundTint="@color/red" />





</RelativeLayout>